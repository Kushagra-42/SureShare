'use client'

import { Button } from "@/components/ui/button"
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card"
import { Input } from "@/components/ui/input"
import { Label } from "@/components/ui/label"
import { Upload } from 'lucide-react'
import { Alert, AlertDescription } from "@/components/ui/alert"
import Link from "next/link"

export default function Component({ fileLink }: { fileLink?: string }) {
  return (
    <div className="min-h-screen p-4 flex items-center justify-center bg-gray-50/50">
      <Card className="w-full max-w-md">
        <CardHeader>
          <CardTitle>Share File</CardTitle>
          <CardDescription>Upload and share your files securely with optional password protection.</CardDescription>
        </CardHeader>
        <CardContent className="space-y-4">
          {fileLink && (
            <Alert>
              <AlertDescription className="break-all">
                Your file is uploaded:{' '}
                <Link href={fileLink} className="text-primary hover:underline">
                  {fileLink}
                </Link>
              </AlertDescription>
            </Alert>
          )}
          
          <form action="/upload" method="post" encType="multipart/form-data" className="space-y-4">
            <div className="space-y-2">
              <Label htmlFor="file">File</Label>
              <Input 
                id="file" 
                name="file" 
                type="file" 
                required 
                className="cursor-pointer"
              />
            </div>
            
            <div className="space-y-2">
              <Label htmlFor="password">Password (Optional)</Label>
              <Input 
                id="password" 
                name="password" 
                type="password" 
                placeholder="Enter password to protect your file"
              />
            </div>

            <Button type="submit" className="w-full">
              <Upload className="mr-2 h-4 w-4" />
              Share File
            </Button>
          </form>
        </CardContent>
      </Card>
    </div>
  )
}